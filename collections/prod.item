<div class="row product">
    <div class="col-lg-6 product-image">
        {mainProductImage}
        <span class="shadow"></span>
    </div>
    <div class="col-lg-6 product-desc">
        <h3>{title}</h3>
        <h4>{productSubtitle}</h4>
        <div class="desc">
            {description}
        </div>
        <div class="secondary-product-image">
            {secondaryProductImage}
        </div>
    </div>
</div>
