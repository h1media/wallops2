{.section collection}

  <squarespace:category collection="{urlId}">
    {.if categories}
      <div class="category-wrapper">
        <span class="category">{.repeated section categories}{name}</span>
      </div>
        {.repeated section items}
          <article>
            <h1>{title}</h1>
            <p>{description}</p>
          </article>
        {.or}
          <p>There are no items here.</p>
        {.end}
    {.end}
    {.end}

  </squarespace:category>

{.end}